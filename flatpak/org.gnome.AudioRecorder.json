{
    "app-id": "org.gnome.AudioRecorder",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "audio-recorder",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=home"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "audio-recorder",
            "buildsystem": "simple",
            "build-commands": [
                "install -D audio_recorder.py /app/bin/audio_recorder.py",
                "install -D data/ui/window.ui /app/share/audio-recorder/ui/window.ui",
                "install -D data/ui/track-row.ui /app/share/audio-recorder/ui/track-row.ui",
                "install -Dm644 data/org.gnome.AudioRecorder.desktop /app/share/applications/org.gnome.AudioRecorder.desktop",
                "install -Dm644 data/org.gnome.AudioRecorder.metainfo.xml /app/share/metainfo/org.gnome.AudioRecorder.metainfo.xml",
                "install -Dm644 data/icons/hicolor/scalable/apps/org.gnome.AudioRecorder.svg /app/share/icons/hicolor/scalable/apps/org.gnome.AudioRecorder.svg",
                "install -d /app/share/audio-recorder/help",
                "cp -r help/C /app/share/audio-recorder/help/",
                "install -D flatpak/audio-recorder /app/bin/audio-recorder"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": ".."
                }
            ]
        }
    ]
}

